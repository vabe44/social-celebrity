<% include ../../partials/header %>

<div id="container-bg">

	<div id="container2">

        <% include ../../partials/dashboard/nav %>

        <div id="faq-spacer"></div>

        <div class="col-sm-12">

            <h3 class="pagetitle">
                Review Your Order
            </h3>

            <p>
                Rate your experience with this seller.
            </p>

        </div>

        <br>

        <div class="col-sm-12">

            <form id="addshoutoutreview" name="addshoutoutreview" method="post" action="/shoutouts/review">

                <input id="shoutoutId" name="shoutoutId" type="hidden" value="<%= order.shoutout_id %>">
                <input id="shoutoutOrderId" name="shoutoutOrderId" type="hidden" value="<%= order.id %>">

                <div class="form-group">
                    <label for="username">Rating (1 worst, 5 best)</label><br>
                    <label class="radio-inline">
                        <input type="radio" name="reviewrating" id="inlineRadio1" value="1" required> 1
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="reviewrating" id="inlineRadio2" value="2"> 2
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="reviewrating" id="inlineRadio3" value="3"> 3
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="reviewrating" id="inlineRadio4" value="4"> 4
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="reviewrating" id="inlineRadio5" value="5"> 5
                    </label>
                </div>

                <div class="form-group">
                    <label for="reviewtext">Describe your experience</label><br>
                    <textarea name="reviewtext" rows="3"></textarea>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Send</button>

            </form>

        </div>

	</div>
	<!-- container2 -->

    <% include ../../partials/footer %>

</body>
</html>