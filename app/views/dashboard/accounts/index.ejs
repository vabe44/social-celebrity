<% if(twitterAccounts) { %>
<ul>
    <% twitterAccounts.forEach(function(twitter){ %>
        <li>
            <form id="delete-form" action="/dashboard/accounts/remove/twitter/<%= twitter.username %>?_method=DELETE" method="POST">
                <%= twitter.username %> - <input type="submit" value="Remove">
            </form>
        </li>
    <% }); %>
</ul>
<% }  else { %>
You have no linked accounts.
<% } %>